# Template file for 'clipmenu'
pkgname=clipmenu
version=7.0.0.260130
revision=1
_commit=c98829b4b1a6eda471a80647221a57ab391608b6
wrksrc="clipmenu-${_commit}"
build_style="gnu-makefile"
makedepends="xorgproto libX11-devel libXfixes-devel"
depends="xsel"
short_desc="Clipboard management using dmenu"
maintainer="biopsin <biopsin@tuta.io>"
license="Public Domain"
homepage="https://github.com/cdown/clipmenu"
distfiles="https://github.com/cdown/clipmenu/archive/${_commit}.tar.gz"
