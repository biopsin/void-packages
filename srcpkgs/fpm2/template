# Template file for 'fpm2'
pkgname=fpm2
version=0.90
revision=1
build_style=gnu-configure
configure_args="--disable-nls"
hostmakedepends="pkg-config intltool"
makedepends="gtk+3-devel libxml2-devel nettle-devel"
short_desc="Securely store your passwords"
maintainer="biopsin <biopsin@teknik.io>"
license="GPL License"
homepage="https://als.regnet.cz/fpm2/"
distfiles="https://als.regnet.cz/fpm2/download/${pkgname}-${version}.tar.xz"
checksum=1f3ab9c41c86267da97c48dda2f2333e163a3179fb21be1d34d4b4bf8792dfd1

post_install() {
	cp -f "${FILESDIR}/logo.png" "${DESTDIR}/usr/share/pixmaps/fpm2"
	cp -f "${FILESDIR}/fpm2.desktop" "${DESTDIR}/usr/share/applications"
}
